{
  "name": "Netflix AutoSkip PRO",
  "description": "Automatically skip intros, recaps, and next episodes â€” instantly and seamlessly.",
  "author": "Yashvir Gaming",
  "version": "1.0",
  "manifest_version": 3,

  "background": {
    "service_worker": "source/Playground.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": ["source/ContentEngine.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "*://*.netflix.com/*"
  ],

  "action": {
    "default_popup": "source/Popup.html",
    "default_icon": {
      "16": "images/netflix-autoskip-pro-16.png",
      "32": "images/netflix-autoskip-pro-32.png",
      "48": "images/netflix-autoskip-pro-48.png",
      "128": "images/netflix-autoskip-pro-128.png"
    }
  },

  "icons": {
    "16": "images/netflix-autoskip-pro-16.png",
    "32": "images/netflix-autoskip-pro-32.png",
    "48": "images/netflix-autoskip-pro-48.png",
    "128": "images/netflix-autoskip-pro-128.png"
  }
}
